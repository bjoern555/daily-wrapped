{
  "manifest_version": 3,
  "name": "Daily Wrapped",
  "description": "Your browser activity, beautifully wrapped.",
  "version": "0.1",
  "permissions": ["storage", "tabs", "activeTab", "scripting", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
